// 边框
.vant-border
  &.border-left-15
    &::after
      display block
      left 15px
.border
  position relative
  &::after
    content ' '
    position absolute
    pointer-events none
    box-sizing border-box
    top -50%
    left -50%
    right -50%
    bottom -50%
    -webkit-transform scale(0.5)
    transform scale(0.5)
    border 0 solid #d8d8d8
    border-bottom-width 1px
  &.border-fa
    borderColor(#f3f3f3)
  &.border-ebedf0
    borderColor(#ebedf0)
.radius-10
  borderRadius(10)
.radius-20
  borderRadius(20)
.radius-30
  borderRadius(30)
  overflow hidden
